{
	"name": "matcha",
	"version": "1.0.0",
	"description": "",
	"main": "index.js",
	"scripts": {
		"start": "NODE_ENV=production node build/index.js",
		"dev": "NODE_ENV=development ts-node-dev src/index.ts",
		"test": "NODE_ENV=test jest --verbose --runInBand --forceExit",
		"connect-db": "psql postgresql://localhost:5432/matcha -U postgres",
		"migration:create": "node node_modules/db-migrate/bin/db-migrate create -e local",
		"migrate": "db-migrate up -e local",
		"migrate:test": "db-migrate up -e test",
		"prettier": "prettier --config .prettierrc '**/*.ts' --write",
		"lint": "eslint --ext .ts .",
		"tsc": "tsc"
	},
	"devDependencies": {
		"@types/bcrypt": "^5.0.0",
		"@types/cors": "^2.8.12",
		"@types/express": "^4.17.14",
		"@types/jest": "^29.2.0",
		"@types/pg": "^8.6.5",
		"@types/supertest": "^2.0.12",
		"@typescript-eslint/eslint-plugin": "^5.41.0",
		"@typescript-eslint/parser": "^5.41.0",
		"eslint": "^8.26.0",
		"jest": "^29.2.2",
		"prettier": "^2.7.1",
		"supertest": "^6.3.1",
		"ts-jest": "^29.0.3",
		"ts-node-dev": "^2.0.0",
		"typescript": "^4.8.4"
	},
	"dependencies": {
		"bcrypt": "^5.1.0",
		"cors": "^2.8.5",
		"db-migrate": "^0.11.13",
		"db-migrate-pg": "^1.2.2",
		"dotenv": "^16.0.3",
		"express": "^4.18.2",
		"express-async-errors": "^3.1.1",
		"express-async-handler": "^1.2.0",
		"pg": "^8.8.0",
		"postgres": "^3.3.1",
		"psql": "^0.0.1"
	}
}
